<div class="container">
<h1>Rails Search | ActiveRecord</h1>
  <div class="row justify-content-center">
  <div class="col-sm-8 my-3 mb-5">
    <%= form_with url: movies_path, method: :get, class: "d-flex" do %>
      <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            placeholder: "Type a keyword e.g. 'Harry Potter'"
        %>
      <%= submit_tag "Search", name: "", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
  <div class="row" id="movie-cards">
        <%# <div class="card mb-2"> %>
        <%# <div class="card-body"> %>

        <% if @movies.any? %>
          <% @movies.each do |movie| %>
          <div class="col-lg-3 col-md-4 col-sm-6 col-12" id="mymovies">
          <div class="card mb-2">
            <img src="<%=movie['Poster']%>" class="card-img-top" alt="">
            <div class="card-body">
              <span class="badge bg-primary mb-2"><%= movie['Year'] %></span>
              <h5 class="card-title"><%= movie['Title'] %></h5>
            </div>
          </div>
          </div>
            <% end %>
        <% elsif params[:query].present? && @data['Response'] == 'False' %>
        <em>Sorry, no movies found.</em>
        <% else %>
          <em>Search a movie.</em>
        <% end %>
      </div>
  </div>
</div>
